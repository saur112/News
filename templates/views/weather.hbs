<!DOCTYPE html>
<html lang="en">
  <head>

{{>headerlink}}
<link rel="stylesheet" href="css/weather.css">
</head>
<body>
    {{>navbar}}
    <div class="container_fluid main_header">
      <div class="row ">
        <div class="col-md-10 col-12 mx-auto main">
          <div class="main_content">
            <form  class="temp_form" action="">
              <input id="type" type="text" placeholder="Enter the name of city">
              <input type="submit" value="search" id="submit">
            </form>
          </div>
          <div class="info">
          <div class="top_layer">
            <p id="day"></p>
            <p id="date"></p>
          </div>
          <div class="main_layer">
            <p id="city">Get output here</p>
            <div class="middle_layer ">
              <p id="temp"><span>0</span><sup>o</sup>C</p>
              <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
    {{>footer}}
  <script src="js/main.js"></script>
</body>
</html>